@model EntrantsManagementSystem.Models.Subject
@{
    ViewBag.Title = "SubjectSettings";
}

<h3>You are going to edit @Model.Name</h3>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model=>model.SubjectID)
    @Html.TextBoxFor(model=>model.Name, htmlAttributes: new { @class = "form-control" })
    <button type="submit" style="margin: 5px;" class="btn btn-success">
        Save
    </button>
}
@Html.ActionLink("Return to the list","List")
<br/>
@Html.ActionLink("Delete this subject","Delete",new { id=Model.SubjectID})