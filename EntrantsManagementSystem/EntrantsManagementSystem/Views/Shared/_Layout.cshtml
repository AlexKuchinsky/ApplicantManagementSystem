<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>
        .vertical-menu {
            width: 200px; /* Set a width if you like */
        }

            .vertical-menu a {
                background-color: #ABDFFD; /* Grey background color */
                color: black; /* Black text color */
                display: block; /* Make the links appear below each other */
                padding: 12px; /* Add some padding */
                text-decoration: none; /* Remove underline from links */
                width: 180px;
                text-align: center;
            }

                .vertical-menu a:hover {
                    background-color: #99D8FD; /* Dark grey background on mouse-over */
                    font-weight: 550;
                }

    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">

        @Html.ActionLink("Entrants management system", "List", "Entrants", new { area = "" }, new { @class = "navbar-brand" })
    </div>
    <div class="col-sm-4   vertical-menu">
        @Html.ActionLink("All entrants", "List", "Entrants")
        @Html.ActionLink("Create new entrant", "Create","Entrants")
        @Html.ActionLink("Countries", "List","Countries")
        @Html.ActionLink("Subjects", "List", "Subjects")
    </div>
    <div class="col-sm-8 container body-content">
        <br />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; All rights reserved</p>
            <p>Version 2.0</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>