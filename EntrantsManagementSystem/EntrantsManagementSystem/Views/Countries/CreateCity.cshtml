@model EntrantsManagementSystem.Models.City
@{
    ViewBag.Title = "CreateCity";
}

<h2>CreateCity</h2>
@using (Html.BeginForm())
{

    <b>Please, enter new city's name:</b>
    @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control" })

    

    <button type="submit" class="btn btn-success">
        Create
    </button>
    <button class="btn-sm">
        @Html.ActionLink("Retrun to the country page","CountrySettings",new { id=ViewBag.CountryID})
    </button>
}
