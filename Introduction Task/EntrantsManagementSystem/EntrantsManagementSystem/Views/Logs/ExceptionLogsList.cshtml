@model IEnumerable<EntrantsManagementSystem.Models.ExceptionLog>
@using EntrantsManagementSystem.Models
@{
    ViewBag.Title = "ExceptionLogsList";
}

<h2>Exctption Logs</h2>

<table class="table table-bordered table-dark">
    <tr>
        <td>
            <b>Log ID</b>
        </td>
        <td>
            <b>Time</b>
        </td>
        <td>
            <b>Operation</b>
        </td>
        <td>
            <b>Level</b>
        </td>
        <td>
            <b>Type</b>
        </td>
        <td>
            <b>Message</b>
        </td>
        <td>
            <b>Description</b>
        </td>
    </tr>
    @foreach (ExceptionLog exceptionLog in Model)
    {
        <tr>
            <td>
                @exceptionLog.BaseLogID
            </td>
            <td>
                @exceptionLog.LogsBase.Time
            </td>
            <td>
                @exceptionLog.LogsBase.Operation
            </td>
            <td>
                @exceptionLog.LogsBase.LogLevel
            </td>
            <td>
                @exceptionLog.ExceptionType
            </td>
            <td>
                @exceptionLog.Message
            </td>
            <td>
                @exceptionLog.Description
            </td>

        </tr>
    }
</table>
