<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/LayoutStyle.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/TreeStyle.css" rel="stylesheet" type="text/css"/>
    <script src="~/Scripts/TreeLogic.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-3.2.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
</head>
<body>
    <div class="navbar navbar-fixed-top" style="background-color:#4298D7; text-align:center;">
        <h4 style="color:white">Entrants management system</h4>
    </div>
    <div class="col-sm-4   vertical-menu">
        @Html.ActionLink("All entrants", "List", "Entrants")
        @Html.ActionLink("Create new entrant", "Create","Entrants")
        @Html.ActionLink("Universities", "Dropdowns", "Test")
        @Html.ActionLink("TreeView", "Tree", "Test")   
    </div>
    <div class="col-sm-8 container body-content">
        <br />
        @RenderBody()
        <hr />
        <footer class="navbar-fixed-bottom" style="margin: 0px 0px 30px 30px">
            <p>&copy; All rights reserved</p>
            <p>Version 3.6</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>