<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/LayoutStyle.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
  
</head>
<body>
    <div class="navbar navbar-fixed-top" style="background-color:#4298D7; text-align:center;">
        <h4 style="color:white">Entrants management system</h4>
    </div>
    <div class="col-sm-4   vertical-menu">
        @Html.ActionLink("All entrants", "List", "Entrants")
        @Html.ActionLink("Create new entrant", "Create","Entrants")
        @Html.ActionLink("Update logs", "UpdateLogsList","Logs")
        @Html.ActionLink("Dlete logs", "DeleteLogsList", "Logs")
        @Html.ActionLink("Exception logs", "ExceptionLogsList", "Logs")
        
    </div>
    <div class="col-sm-8 container body-content">
        <br />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; All rights reserved</p>
            <p>Version 3.0</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>